<h1>Create an Artcile</h1>

<% if @article.errors.any? %>
<h2>The following errors neeed to be adressed</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
<p>
  <%= f.label :title %><br/>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :description %><br/>
  <%= f.text_area :desription %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>